@model EarthMarket.Presentation.Models.ViewModels.ProductCardViewModel

<div class="col-md-4">

    <figure class="card card-product ">
        <div class="img-wrap"><img class="card-img-top" src="@Url.Content(Model.Product.ProductImages.First())" alt="Product Image" width="100%"></div>
        <figcaption class="info-wrap">
            <h4 class="card-title">
            @Html.RouteLink(Model.Product.Name, new { Controller = "Product", Action = "GetProduct", productKey = Model.Product.Key })
            </h4>
            <p class="desc">Some small description goes here</p>
            @*<div class="rating-wrap">
                    <div class="label-rating">132 reviews</div>
                    <div class="label-rating">154 orders </div>
                </div>*@ <!-- rating-wrap.// -->
        </figcaption>
        <div class="bottom-wrap">
            @Html.RouteLink("Product Details", 
           new { Controller = "Product", Action = "GetProduct", productKey = Model.Product.Key }, 
           new { @class = "btn btn-sm btn-primary float-right" })

            @*<div class="price-wrap h5">
                    <span class="price-new">$1280</span> <del class="price-old">$1980</del>
                </div>*@ <!-- price-wrap.// -->
        </div> <!-- bottom-wrap.// -->
    </figure>

</div> <!-- col // -->